{
    "tasks": [
      {
        "enable": false,
        "module": "tasks.oled.oled_display",
        "class": "OLEDDisplayTask",
        "instance_name": "oled_main",
        "init_args": {
          "bus_num": 3,
          "addr": 60,
          "update_interval": 1.0,
          "show_cpu": true,
          "show_mem": true,
          "show_temp": true,
          "show_time": true
        }
      },

      {
        "enable": false,
        "module": "tasks.print_yes",
        "class": "PrintYesTask",
        "instance_name": "print_yes_instance",
        "init_args": {
          "interval": 1.0
        }
      },

    {
      "enable": true,
      "module": "tasks.i2c.i2c_CoreControl",
      "class": "I2cStm32CommdTask",
      "instance_name": "stm32_sensor_comm",
      "init_args": {
        "bus_number": 3,
        "poll_interval": 2.0,
        "command": "GET_ALL"
      }
    }
    ],

    "settings": {
      "log_level": "INFO",
      "error_codes": {
        "0": "系统正常",
        "1001": "OLED 初始化失败",
        "1002": "OLED 显示过程出错",
        "2001": "电机通信超时",
        "3001": "摄像头未就绪"
      }
    }
  }